---
import { cn } from "@/lib/utils";
import NestedSquare from "../../ui/NestedSquare.astro";

import * as m from "@/paraglide/messages";

const isHK = Astro.locals.paraglide.lang === "zh-HK";
const isTW = Astro.locals.paraglide.lang === "zh-TW";
const isCN = Astro.locals.paraglide.lang === "zh-CN";
const isZH = Astro.locals.paraglide.lang === "zh";
const isChinese = isHK || isTW || isCN || isZH;
---

<!-- vision section -->
<section
	aria-describedby="missionSectionDescription"
	id="vision"
	class="flex items-center justify-center ~my-16/52 ~py-16/52">
	<div
		class="flex max-w-full flex-col items-center justify-center gap-4 rounded-xl bg-card px-6 py-10 md:-mt-20 md:gap-4 md:px-12 md:py-8 lg:max-w-[70vw] lg:px-16 lg:py-10 2xl:max-w-[60vw] 3xl:px-24 3xl:py-12">
		<p
			class="whitespace-nowrap text-[0.65rem] font-normal uppercase leading-7 text-muted-foreground md:text-xs 3xl:text-sm">
			/ {m.vision()} /
		</p>
		<div class="relative flex flex-col items-center gap-[4vh]">
			<svg
				class="absolute -start-5 -top-6 size-16 text-primary/15 md:-start-3"
				width="16"
				height="16"
				viewBox="0 0 16 16"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
				aria-hidden="true">
				<path
					d="M7.39762 10.3C7.39762 11.0733 7.14888 11.7 6.6514 12.18C6.15392 12.6333 5.52552 12.86 4.76621 12.86C3.84979 12.86 3.09047 12.5533 2.48825 11.94C1.91222 11.3266 1.62421 10.4467 1.62421 9.29999C1.62421 8.07332 1.96459 6.87332 2.64535 5.69999C3.35231 4.49999 4.33418 3.55332 5.59098 2.85999L6.4943 4.25999C5.81354 4.73999 5.26369 5.27332 4.84476 5.85999C4.45201 6.44666 4.19017 7.12666 4.05926 7.89999C4.29491 7.79332 4.56983 7.73999 4.88403 7.73999C5.61716 7.73999 6.21938 7.97999 6.69067 8.45999C7.16197 8.93999 7.39762 9.55333 7.39762 10.3ZM14.6242 10.3C14.6242 11.0733 14.3755 11.7 13.878 12.18C13.3805 12.6333 12.7521 12.86 11.9928 12.86C11.0764 12.86 10.3171 12.5533 9.71484 11.94C9.13881 11.3266 8.85079 10.4467 8.85079 9.29999C8.85079 8.07332 9.19117 6.87332 9.87194 5.69999C10.5789 4.49999 11.5608 3.55332 12.8176 2.85999L13.7209 4.25999C13.0401 4.73999 12.4903 5.27332 12.0713 5.85999C11.6786 6.44666 11.4168 7.12666 11.2858 7.89999C11.5215 7.79332 11.7964 7.73999 12.1106 7.73999C12.8437 7.73999 13.446 7.97999 13.9173 8.45999C14.3886 8.93999 14.6242 9.55333 14.6242 10.3Z"
					fill="currentColor"></path>
			</svg>
			<p
				id="missionSectionDescription"
				class={cn(
					"text-center text-lg text-primary sm:text-2xl md:text-3xl md:leading-[1.4] 3xl:text-5xl 3xl:leading-[1.4]",
					isChinese && "leading-[1.4] md:leading-[1.2] 3xl:leading-[1.2]",
				)}>
				{m.each_misty_myna_blink()}&nbsp;&nbsp;<span
					class="inline-block size-6 align-sub sm:size-8 md:size-9 3xl:size-14">
					<NestedSquare />
				</span>
			</p>
			<div class="flex items-center gap-5">
				<span class="text-sm text-primary md:text-base">Sam Yung</span>
				<span
					class="whitespace-nowrap text-[0.65rem] font-normal uppercase leading-7 text-flatgray2 md:text-xs lg:ml-0 3xl:text-sm"
					>/ {m.founder()} /</span
				>
			</div>
		</div>
	</div>
</section>
