---
import App from "@/components/astro/App.astro";
import { SEO } from "astro-seo";

import * as m from "@/paraglide/messages";

export const prerender = true;
---

<App>
	<SEO
		slot="head"
		canonical="https://stablestudio.org/tl"
		title="Stable Studio"
		description=`Stable Studio ${m.active_calm_felix_sway()}`
		openGraph={{
			basic: {
				title: "Stable Studio",
				type: "website",
				image: "https://stablestudio.org/stablestudio-large.png",
				url: "https://stablestudio.org",
			},
			optional: {
				locale: "tl",
				localeAlternate: [
					"en",
					"ja",
					"tl",
					"id",
					"zh-HK",
					"zh-CN",
					"vi",
					"zh-TW",
					"zh",
				],
				siteName: "Stable Studio",
				description:
					`Stable Studio ${m.active_calm_felix_sway()}`,
			},
		}}
		twitter={{
			card: "summary_large_image",
			site: "@stablestudioSS",
			title: "Stable Studio",
			description:
				`Stable Studio ${m.active_calm_felix_sway()}`,
			image: "https://stablestudio.org/stablestudio-large.png",
			creator: "@sorarararu00"
		}}
	/>
</App>
